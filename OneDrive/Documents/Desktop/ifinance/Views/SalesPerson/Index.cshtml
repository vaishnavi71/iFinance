@model List<SalesPerson>
 
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Telephone</th>
            <th>Fax</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.SalesPersonID</td>
                <td>@obj.SalesPersonName</td>
                <td>@obj.SalesPersonTelephone</td>
                <td>@obj.SalesPersonFax</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@obj.SalesPersonID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@obj.SalesPersonID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
 
<a asp-action="Create">Create</a>