@model S5G11_PVFAPP.Models.Product

<h1>Create Product</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ProductStandardPrice"></label>
        <input asp-for="ProductStandardPrice" class="form-control" />
        <span asp-validation-for="ProductStandardPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription"></label>
        <input asp-for="ProductDescription" class="form-control" />
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductFinish"></label>
        <input asp-for="ProductFinish" class="form-control" />
        <span asp-validation-for="ProductFinish" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>