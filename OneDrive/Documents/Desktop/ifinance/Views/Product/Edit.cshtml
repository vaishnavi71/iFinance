@model S5G11_PVFAPP.Models.Product

<h2>Edit Product</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="ProductID" class="control-label"></label>
        <input asp-for="ProductID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription" class="control-label"></label>
        <input asp-for="ProductDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductStandardPrice" class="control-label"></label>
        <input asp-for="ProductStandardPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductFinish" class="control-label"></label>
        <input asp-for="ProductFinish" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>